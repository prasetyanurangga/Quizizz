<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prasetyanurangga.quizizz">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Quizizz">
        <activity
            android:name=".ui.view.ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/Theme.Quizizz.NoActionBar"></activity>
        <activity
            android:name=".ui.view.QuestionActivity"
            android:label="@string/title_activity_question_detail"
            android:theme="@style/Theme.Quizizz.NoActionBar" />
        <activity android:name=".ui.view.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>