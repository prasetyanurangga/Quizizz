<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Quizizz.AppBarOverlay">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="@string/achievement_text"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="24dp"
            android:paddingRight="16dp"
            android:weightSum="4"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="@dimen/base_size_scale_1"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/primary"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_size_scale_1">
                <LinearLayout
                    android:padding="@dimen/base_size_scale_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:text="@string/score_text"
                        android:layout_marginRight="@dimen/base_size_scale_1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_size_scale_1">
                    </TextView>
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:id="@+id/textview_result_countscore"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:text="@string/zero_text"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="@dimen/base_size_scale_1"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/primary"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_size_scale_1">
                <LinearLayout
                    android:padding="@dimen/base_size_scale_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/base_size_scale_1"
                        android:text="@string/correct_text"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_size_scale_1">
                    </TextView>
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:id="@+id/textview_result_rightanswer"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:text="@string/zero_text"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="@dimen/base_size_scale_1"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/primary"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_size_scale_1">
                <LinearLayout
                    android:padding="@dimen/base_size_scale_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/base_size_scale_1"
                        android:text="@string/wrong_text"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_size_scale_1">
                    </TextView>
                    <TextView
                        android:textSize="@dimen/base_text_size_scale_1"
                        android:textColor="@color/white"
                        android:id="@+id/textview_result_wronganswer"
                        android:layout_width="match_parent"
                        android:text="@string/zero_text"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingTop="@dimen/base_size_scale_1"
            android:paddingBottom="@dimen/base_size_scale_1"
            android:layout_weight="1"
            android:id="@+id/recyclerview_result"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="0dp"/>

        <Button
            android:layout_marginLeft="@dimen/base_size_scale_2"
            android:layout_marginRight="@dimen/base_size_scale_2"
            android:layout_marginBottom="@dimen/base_size_scale_2"
            android:id="@+id/button_result_tohome"
            android:padding="@dimen/base_size_scale_2"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:text="@string/back_to_home_text"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>